 {
  "manifest_version": 3,
  "name": "Ad Friend",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "/scripts/service-worker.js"
  }, 
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
